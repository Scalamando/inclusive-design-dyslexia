---
export interface Props {
    image: { src: string; alt: string; link: string}
}

const { image } = Astro.props as Props;

---

<li class="p-4 rounded-lg bg-slate-200 text-center">
    <a href={image.link}><img src={image.src} alt={image.alt} href={image.link} class="w-full mx-auto rounded-md bg-slate-50 p-2"></a>
</li>